<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Saved Images | Image Saver</title>
        <link rel="stylesheet" href="/styles.css" />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
    </head>
    
    <body>
        <div class="container">
            <header class="topbar">
                <h1 class="app-title">Saved Images</h1>
                <div class="topbar-right">
                    <a href="/home" class="btn secondary small">Back to Home</a>
                </div>
            </header>

            <% if (!images || images.length === 0) { %>
                <p class="placeholder-text">
                    You have no saved images yet. Go back and click "Get Random Image" and then "Save This Image".
                </p>
            <% } else { %>
                <div class="grid">
                    <% images.forEach(function(img) { %>
                        <div class="card">
                            <img src="<%= img.imageUrl %>" alt="Saved image" class="saved-image" />
                            <p class="saved-time">
                                Saved at: <%= img.savedAt.toLocaleString() %>
                            </p>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </body>
</html>
